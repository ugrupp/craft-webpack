{% macro svgSprite(icon, className) %}
  <svg class="o-icon {{ className }}" role="img" title="SVG: {{ icon }}" aria-label="SVG: {{ icon }}">
    <use xlink:href="{{ craft.twigpack.getModuleUri("img/svg-sprite/sprite.svg") | replace({':2170': '/dist'}) }}#{{ icon }}"></use>
  </svg>
{% endmacro %}


{% macro objectFit(image, cover) %}
{% filter spaceless %}
  {% if image.getHasFocalPoint() %}
    {% set focalpoint = image.focalpoint(true) %}
    object-position: {{ focalpoint | default('center') }}; font-family: 'object-fit: {{ cover | default('cover') }}; object-position: {{ focalpoint | default('center') }}'
  {% endif %}
{% endfilter %}
{% endmacro %}
